{
  "include": [
    "src/**/*",
    "bin/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
